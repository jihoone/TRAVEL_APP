<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/backGround">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        android:background="@drawable/linearbackground">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="회원가입"
            android:textSize="30dp"
            android:textColor="@color/backGround"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatTextView>
        <EditText
            android:id="@+id/id_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/gray"
            android:hint="아이디" />

        <EditText
            android:inputType="textPassword"
            android:id="@+id/pw_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/rounded_edittext"
            android:hint="비밀번호 (8자리 이상)"
            android:textColorHint="@color/gray" />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/gray"
            android:hint="이름" />

        <EditText
            android:id="@+id/birth_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/gray"
            android:hint="생년월일(8자리)" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/gender_text"
                android:layout_width="44dp"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:text="성별"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="18sp"
                tools:ignore="RtlCompat" />
            <RadioGroup
                android:layout_marginLeft="10dp"
                android:id="@+id/radioGroup_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/gender_button_male"
                    android:layout_width="13dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="남"
                    android:textColor="@color/gray"
                    android:buttonTint="@color/gray"/>

                <RadioButton
                    android:id="@+id/gender_button_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="여 "
                    android:textColor="@color/gray"
                    android:buttonTint="@color/gray"/>
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/email_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/gray"
            android:hint="이메일" />

        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/hp_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/rounded_edittext"
            android:textColorHint="@color/gray"
            android:hint="핸드폰 번호 ( - 제외)" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/register_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

</LinearLayout>